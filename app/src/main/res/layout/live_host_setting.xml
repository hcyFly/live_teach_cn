<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="100dp"
              android:layout_height="175dp"
              android:background="@drawable/live_setting_popup_bg"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_live_setting_flash"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flash_text_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_flash"/>

        <TextView
            android:id="@+id/flash_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="@string/live_setting_flash_open"
            android:textColor="@color/gray_a0a0a0"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:src="@color/colorGray1"
        android:background="@color/live_setting_item_selected"/>

    <LinearLayout
        android:id="@+id/ll_live_setting_changecamera"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/changecamera_text_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_switch_camera_on"/>

        <TextView
            android:id="@+id/changecamera_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="@string/live_setting_camera"
            android:textColor="@color/gray_a0a0a0"/>
    </LinearLayout>

</LinearLayout>